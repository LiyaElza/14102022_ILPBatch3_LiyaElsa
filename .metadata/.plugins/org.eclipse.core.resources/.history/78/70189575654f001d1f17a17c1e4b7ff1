package com.experion.utility;


import java.security.Provider.Service;
import java.util.ArrayList;
import java.util.Scanner;

import com.experion.entity.Account;
import com.experion.entity.Card;

public class ProductUtility {

	public static void main(String[] args){
		// TODO Auto-generated method stub
	
		
		char mainChoice;
		Scanner scanner = new Scanner(System.in);
		ArrayList<Card> cardList=new ArrayList<Card>();
		ArrayList<Account> accountList=new ArrayList<Account>();
		//Product productList[]=new Product[3];
		
		do {
			System.out.println("1.Add Card Product 2.Add Account Product 3.Buy Product");
			int choice=scanner.nextInt();
			switch(choice) {
			case 1 : cardList.add(Service.createCardProduct());
				break;
			case 2 : Service.displayProductDetails(productList);
				break;
			case 3 : Service.buyProduct(productList);
			}
			
			System.out.println("Do you want to continue (y/n)");
			mainChoice=scanner.next().charAt(0);
		}while(mainChoice=='y');

	}

}
